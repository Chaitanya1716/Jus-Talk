<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111111"
    tools:context=".ProfileActivity">


    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="match_parent"
        android:layout_height="246dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="485dp"
        android:src="@drawable/avatar_default" />

    <TextView
        android:id="@+id/profile_display_name"
        android:layout_width="171dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="111dp"
        android:layout_marginBottom="422dp"
        android:textColor="#ffffff"
        android:gravity="center"
        android:text="Display Name"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/profile_status"
        android:layout_width="257dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="94dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="344dp"
        android:gravity="center"
        android:text="Current User Status"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/profile_totalFriends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="148dp"
        android:layout_marginBottom="197dp"
        android:text="Total Friends"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <Button
        android:id="@+id/profile_send_friend_req_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="126dp"
        android:background="#EA1708"
        android:text="SEND FRIEND REQUEST"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <Button
        android:id="@+id/profile_decline_friend_req_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="84dp"
        android:layout_marginBottom="59dp"
        android:background="#EA1708"
        android:text="DECLINE FRIEND REQUEST"
        android:textColor="#ffffff"
        android:textSize="18sp" />

</RelativeLayout>